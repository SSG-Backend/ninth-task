<h1 class="mt-4">Dashboard</h1>
<p class="lead mb-3 font-weight-bolder">Welcome <%= name %></p>
<p class="lead mt-4" id="next"><a href="/book">View Books <i class="fa fa-eye fa-lg" aria-hidden="true"></i></a></p>
<a href="/users/logout" class="btn btn-secondary">Logout</a>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-8">
            <p class="h1 text-center">Registered Users</p>
            <table class="table table-bordered table-dark">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                </tr>
                </thead>
                <tbody>
                    <% var i = 0; %>
                    <% if (users) { %>
                        <% users.forEach(function(user) {%>
                            <% i += 1; %>
                            <tr>
                                <th scope="row"><%= i %></th>
                                <td><%= user.name %></td>
                                <td><%= user.email %></td>
                            </tr>
                        <% }) %>
                    <% } %> 
                </tbody>
            </table>
        </div>
    </div>
</div>


